# =============================================================================
# DOCUMENT SERVICE - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and update values for your environment
# DO NOT commit .env file to git (it's in .gitignore)

# -----------------------------------------------------------------------------
# SERVER CONFIGURATION
# -----------------------------------------------------------------------------
GRPC_PORT=50051
SERVER_HOST=0.0.0.0
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------
# Local Development
DATABASE_URL=postgres://postgres:postgres@localhost:5432/document_db?sslmode=disable

# Docker (uncomment for Docker deployment)
# DATABASE_URL=postgres://postgres:postgres@postgres:5432/document_db?sslmode=disable

# Connection Pool
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# -----------------------------------------------------------------------------
# NOTES
# -----------------------------------------------------------------------------
# Development: Use localhost database URL
# Docker: Uncomment Docker database URL
# Production: Use environment variables or secrets manager
