# =============================================================================
# ROOT .ENV FOR DOCKER COMPOSE
# =============================================================================
# This file contains environment variables for docker-compose.yml
# Copy to .env and update values

# -----------------------------------------------------------------------------
# POSTGRESQL CONFIGURATION
# -----------------------------------------------------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=postgres

# -----------------------------------------------------------------------------
# SERVICES CONFIGURATION
# -----------------------------------------------------------------------------
# Ports
GATEWAY_PORT=8080
USER_SERVICE_PORT=50052
DOCUMENT_SERVICE_PORT=50051
CONSENT_SERVICE_PORT=50053
POSTGRES_PORT=5432

# -----------------------------------------------------------------------------
# JWT CONFIGURATION (Shared across services)
# -----------------------------------------------------------------------------
JWT_SECRET=your-super-secret-key-change-this-in-production-min-32-chars-required
JWT_ACCESS_TOKEN_DURATION=15m
JWT_REFRESH_TOKEN_DURATION=168h

# -----------------------------------------------------------------------------
# CORS CONFIGURATION
# -----------------------------------------------------------------------------
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080
ALLOWED_CREDENTIALS=true

# -----------------------------------------------------------------------------
# DATABASE URLS (Auto-generated, do not change)
# -----------------------------------------------------------------------------
USER_DB_URL=postgres://postgres:postgres@postgres:5432/user_db?sslmode=disable
DOCUMENT_DB_URL=postgres://postgres:postgres@postgres:5432/document_db?sslmode=disable
CONSENT_DB_URL=postgres://postgres:postgres@postgres:5432/consent_db?sslmode=disable

# -----------------------------------------------------------------------------
# NOTES
# -----------------------------------------------------------------------------
# This .env is used by docker-compose.yml only
# Each service also has its own .env.example file
# For production: Use Docker secrets or environment-specific configuration
