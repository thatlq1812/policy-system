# =============================================================================
# GATEWAY SERVICE - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and update values for your environment
# DO NOT commit .env file to git (it's in .gitignore)

# -----------------------------------------------------------------------------
# SERVER CONFIGURATION
# -----------------------------------------------------------------------------
SERVER_PORT=8080
SERVER_HOST=0.0.0.0
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# GRPC SERVICES
# -----------------------------------------------------------------------------
# User Service
USER_SERVICE_ADDR=localhost:50052
# USER_SERVICE_ADDR=user_service:50052  # Use this for Docker

# Document Service  
DOCUMENT_SERVICE_ADDR=localhost:50051
# DOCUMENT_SERVICE_ADDR=document_service:50051  # Use this for Docker

# Consent Service
CONSENT_SERVICE_ADDR=localhost:50053
# CONSENT_SERVICE_ADDR=consent_service:50053  # Use this for Docker

# gRPC Call Timeout (seconds)
GRPC_TIMEOUT=10

# -----------------------------------------------------------------------------
# JWT CONFIGURATION
# -----------------------------------------------------------------------------
# IMPORTANT: Change these in production!
JWT_SECRET=your-super-secret-key-change-this-in-production-min-32-chars-required
JWT_ACCESS_TOKEN_DURATION=15m
JWT_REFRESH_TOKEN_DURATION=168h

# -----------------------------------------------------------------------------
# CORS CONFIGURATION
# -----------------------------------------------------------------------------
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080
ALLOWED_CREDENTIALS=true

# -----------------------------------------------------------------------------
# NOTES
# -----------------------------------------------------------------------------
# Development: Use localhost addresses
# Docker: Uncomment Docker addresses (service_name:port)
# Production: Use proper secrets management (AWS Secrets Manager, Vault, etc.)
